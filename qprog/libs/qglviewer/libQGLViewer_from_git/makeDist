function addNamespace()
{
  TARGET="class QGLVIEWER_EXPORT $1 : public $2"
  FILE="QGLViewer/$3.h"
  checkGrep

  sed s%"$TARGET"%"class QGLVIEWER_EXPORT $1 : public qglviewer::$2"% $FILE > /tmp/addNamespace
  mv /tmp/addNamespace QGLViewer/$3.h
}
